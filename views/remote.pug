html(lang=en)
	head
		title Remote Client
		link(href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
		link(href="/public/css/app.css" rel="stylesheet")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
	body
		.container-fluid
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					h3 Remote Client
					hr
			.row
				.col-xs-12.col-sm-12.col-md-3.col-lg-3
					.row
						.col-xs-12.col-sm-12.col-md-12.col-lg-12
							.panel.panel-default.text-center
								.panel-body
									h4 Remote Client ID
									span#id
						.col-xs-12.col-sm-12.col-md-12.col-lg-12
							.panel.panel-default.text-center
								.panel-body
									h4 Received
									span#received

				.col-xs-12.col-sm-12.col-md-9.col-lg-9
					.panel.panel-default.text-center
						.panel-body
							canvas#chart(width="900" height="320")

	script(src="node_modules/jquery/dist/jquery.min.js" type="text/javascript")
	script(src="node_modules/smoothie/smoothie.js" type="text/javascript")
	script(src="/socket.io/socket.io.js")
	script(src="/public/scripts/peer.min.js" type="text/javascript")
	//- Custom JavaScript
	script(src="/public/scripts/remote.js" type="text/javascript")